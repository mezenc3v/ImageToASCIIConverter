<Window x:Name="MainWnd" x:Class="ImageToASCIIConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageToASCIIConverter"
        mc:Ignorable="d"
        Title="ImageToASCIIConverter" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="230*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row ="0" Name="SourceImage" Stretch="Uniform" />
        <Button Grid.Row ="1" x:Name="ConvertImageBtn" VerticalAlignment="Top" Content="Open image" Click="ConvertImageBtn_Click"/>
        <Button Grid.Row ="2" x:Name="SaveTextFileBtn" VerticalAlignment="Bottom" Content="Save text" Click="SaveTextFileBtn_Click"/>
        <TextBox Grid.Row ="3" x:Name="LogTextBox" Margin="2,2,2,2" VerticalAlignment ="Bottom" HorizontalAlignment="Stretch"  
                 VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" Height="34" Grid.RowSpan="2"/>
    </Grid>
</Window>
